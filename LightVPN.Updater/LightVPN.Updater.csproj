<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\lightvpn-s.png" />
    <None Remove="Resources\lightvpn-w.png" />
    <None Remove="Resources\lightvpn.ico" />
    <None Remove="Resources\lightvpn.png" />
    <None Remove="Resources\logo-dark.png" />
    <None Remove="Resources\logo-light.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignColors" Version="2.0.0" />
    <PackageReference Include="MaterialDesignThemes" Version="4.0.0" />
    <PackageReference Include="SharpCompress" Version="0.28.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\lightvpn-s.png" />
    <Resource Include="Resources\lightvpn-w.png" />
    <Resource Include="Resources\lightvpn.ico" />
    <Resource Include="Resources\lightvpn.png" />
    <Resource Include="Resources\logo-dark.png" />
    <Resource Include="Resources\logo-light.png" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Resources\Style.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
    </Page>
  </ItemGroup>

</Project>
